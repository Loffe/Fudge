<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>se.eloff.fudge.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/fudge/greet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>loginServlet</servlet-name>
  	<servlet-class>se.eloff.fudge.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>loginServlet</servlet-name>
  	<url-pattern>/fudge/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>forumServlet</servlet-name>
    <servlet-class>se.eloff.fudge.server.ForumServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>forumServlet</servlet-name>
    <url-pattern>/fudge/forum</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>topicServlet</servlet-name>
    <servlet-class>se.eloff.fudge.server.TopicServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>topicServlet</servlet-name>
    <url-pattern>/fudge/topic</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Fudge.html</welcome-file>
  </welcome-file-list>

</web-app>
